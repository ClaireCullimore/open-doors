<%= render "shared/navbar" %>
<div class="container">
  <div style="text-align: center"><h1>Junior and Entry Level Coding Jobs</h1>
  </div>
</div>
<div class="main-section">
  <ul>
    <div class= "cards">
      <% @jobs.each do |job| %>
      <%= link_to job_path(job) do %>
        <div class="small-card color-<%= (1..5).to_a.sample %>">
          <div class="signs">
            <h3><</h3>
          </div>
          <div class="text-card">
            <li><%=job.title%>
              <hr style="background-color: black; width: 100px">
              <div class="small-text">
                <h3>Company: <%= job.company %></h3>
                <h3>Location: <%= job.location %></h3>
                <h3>Terms: <%= job.terms %></h3>
                <h3><%=job.date%></h3>
              </div>
            </li>
          </div>
          <div class="signs">
            <h3>/></h3>
          </div>
        </div>
        <% end %>
      <% end %>
      </div>
  </ul>
</div>
